{
  "name": "@zh-keyboard/zh-keyboard-monorepo",
  "version": "1.0.0",
  "description": "中文虚拟键盘组件库",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel --filter=./packages/* run dev",
    "build": "pnpm -r --filter=./packages/* run build",
    "test": "pnpm -r --filter=./packages/* run test",
    "lint": "eslint --ext .js,.ts,.tsx,.vue . --fix",
    "examples:build": "pnpm run build && cd examples && pnpm run build"
  },
  "keywords": [
    "keyboard",
    "chinese",
    "virtual-keyboard",
    "vue",
    "react",
    "component",
    "键盘",
    "中文",
    "虚拟键盘",
    "拼音",
    "手写"
  ],
  "author": "dusionlike",
  "license": "Apache 2.0",
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@types/node": "18"
  },
  "dependencies": {
    "@eslint-react/eslint-plugin": "^1.50.0",
    "dexie": "^4.0.11",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19"
  }
}
